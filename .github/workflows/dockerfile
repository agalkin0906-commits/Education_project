# 1. Базовий образ
FROM python:3.9-slim

# 2. Робоча директорія
WORKDIR /app

# 3. Встановлення залежностей
COPY requirements.txt .
RUN pip install --no-cache-dir -r requirements.txt

# 4. Копіювання коду
COPY . .

# 5. Порт та запуск
EXPOSE 8000
CMD ["uvicorn", "main:app", "--host", "0.0.0.0", "--port", "8000"]
